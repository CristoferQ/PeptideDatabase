var getSecForDetail = function(tbody, table){
    $(tbody).on("click", "#b_results", function(){
		var data = table.row( $(this).parents("tr") ).data();		
        if (data != undefined){
            window.open("../sequence?id_sec="+data.id_sequence, "_blank");
