    'contentType': 'application/json'
}).done( function(data) {
    var example = $('#example').DataTable( {
        "scrollX": true,
        "aaData": data,
        "columns": [
            { "defaultContent": "<button id='b_results' type='button' class='btn btn-success'><i class='fa fa-file'></i></button>"},
